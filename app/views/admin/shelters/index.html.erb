<%= link_to "User Shelters Index", "/shelters" %>

<h1>All Shelters</h1>

<% @shelters.each do |shelter| %>
  <div id="shelter-<%= shelter.id %>">
    <h3><%= link_to "#{shelter.name}", "/admin/shelters/#{shelter.id}" %></h3>
  </div>
<% end %>

<h1>Shelters With Pending Applications</h1>
<div id="pending">
<% @pending.each do |shelter| %>
  <h3><%= link_to "#{shelter.name}", "/admin/shelters/#{shelter.id}" %></h3>
<% end %>
</div>
