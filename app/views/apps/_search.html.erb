<h2>Add a Pet to this Application</h2>

<div class="search">
  <%= form_with url: "/apps/#{@app.id}?search=#{:search}", method: :get, local: true, skip_enforcing_utf8: true do |form| %>
    <%= form.label :search %>
    <%= form.text_field :search %>
    <%= form.submit 'Submit', name: nil %>
  <% end %>
</div>
<br>

<% if @pets %>
  <% @pets.each do |pet| %>
    <section><%= pet.name %>
    <%= button_to "Adopt this Pet", "/apps/#{@app.id}", controller: :pet_app, action: :create, params: {pet: pet}, method: :post %></section>
  <% end %>
<% end %>
