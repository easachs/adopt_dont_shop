<h1>All pets</h1>

<div class="search">
<%= form_with url: "/pets", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %>

<p><%= link_to "Start an Application", "/apps/new" %></p>
</div>

<% @pets.each do |pet| %>
  <section>
  <h3><%= link_to pet.name, "/pets/#{pet.id}" %></h3>
  <p>Age: <%= pet.age %></p>
  <p>Breed: <%= pet.breed %></p>
  <p>Adoptable: </p>
  <p>You can find <%= pet.name %> at <%= pet.shelter_name %>!</p>
  <%= button_to "Edit #{pet.name}", "/pets/#{pet.id}/edit", method: :get %>
  <%= button_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete, :onclick => "return confirm('Are you sure you want to delete this pet?')" %>
  </section>
<% end %>
