<h1>Edit Pet</h1>
<section>
  <%= form_with url: "/pets/#{@pet.id}", method: :patch, local: true do |f| %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :breed %>
      <%= f.text_field :breed %>
    </p>
    <p>
      <%= f.label :adoptable %>
      <%= f.check_box :adoptable %>
    </p>
    <p>
      <%= f.label :age %>
      <%= f.number_field :age %>
    </p>
    <%= f.submit %>
  <% end %>
</section>
