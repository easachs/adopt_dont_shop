<h1>All Shelters</h1>

<div class="search">
<%= link_to "Admin Shelters Index", "/admin/shelters" %>
|
<%= link_to "Sort by number of pets", "/shelters?sort=pet_count" %>
<br>
<br>
<%= form_with url: "/shelters", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %>
</div>
<br>

<% @shelters.each do |shelter| %>
  <section>
  <div id="shelter-<%= shelter.id %>">
    <h3><%= link_to shelter.name, "/shelters/#{shelter.id}" %></h3>
    <p>Created at: <%= shelter.created_at %></p>
    <%= button_to "Update #{shelter.name}", "/shelters/#{shelter.id}/edit", method: :get %>
    <%= button_to "Delete #{shelter.name}", "/shelters/#{shelter.id}", method: :delete %>
  </div>
  </section>
<% end %>
